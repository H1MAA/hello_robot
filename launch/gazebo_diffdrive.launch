<launch>
  <arg name="model" default="$(find hello_robot)/urdf/hello_robot.urdf.xacro"/>
  <arg name="rvizconfig" default="$(find hello_robot)/rviz/urdf.rviz" />

  <include file="$(find hello_robot)/launch/display_gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

  <rosparam command="load"
            file="$(find hello_robot)/config/joints.yaml"
            ns="hellorobot_joint_state_controller" />
  <rosparam command="load"
            file="$(find hello_robot)/config/diffdrive.yaml"
            ns="hellorobot_diff_drive_controller" />

  <node name="hellorobot_controller_spawner" pkg="controller_manager" type="spawner"
    args="hellorobot_joint_state_controller
          hellorobot_diff_drive_controller
          --shutdown-timeout 3"/>

  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/hellorobot_diff_drive_controller/cmd_vel"/>
  </node>
</launch>
